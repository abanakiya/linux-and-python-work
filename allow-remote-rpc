echo "*** Allow Remote RPC ***"

read -p "Enter IP address: "
varIP=$REPLY
read -s -p "Enter domain password (uname): "
varPwd=$REPLY

net rpc registry setvalue "HKLM\SYSTEM\CURRENTCONTROLSET\CONTROL\TERMINAL SERVER" "ALLOWREMOTERPC" "DWORD" "1" -U <dname>\\<uname>%$varPwd -I $varIP

if [ "$?" = "0" ]; then
  echo -e "\nRemote RPC enabled"
fi
